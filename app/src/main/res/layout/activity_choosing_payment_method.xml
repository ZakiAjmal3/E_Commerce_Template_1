<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingPaymentMethod">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/backBtn"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Payment"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/priceDetailCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:strokeColor="@color/white"
            app:strokeWidth="0dp"
            app:cardCornerRadius="10dp"
            android:visibility="visible"
            android:layout_margin="10dp">
            <RelativeLayout
                android:id="@+id/priceRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/whiteSeed"
                android:elevation="5dp"
                android:paddingTop="10dp">
                <RelativeLayout
                    android:id="@+id/priceHidingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <LinearLayout
                        android:id="@+id/priceAndItemsLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:id="@+id/priceAndItemstxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Price(1 item)"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            />
                        <TextView
                            android:id="@+id/priceTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1234"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/discountAndItemsLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_below="@id/priceAndItemsLinearLayout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:id="@+id/discountAndItemstxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            />
                        <TextView
                            android:id="@+id/discountTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="-1234"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/green"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/shippingAndItemsLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_below="@id/discountAndItemsLinearLayout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:id="@+id/deliveryAndItemstxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/dark_grey"
                            />
                        <TextView
                            android:id="@+id/deliveryTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="-1234"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/red"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="01dp"
                        android:background="@color/dark_grey"
                        android:layout_below="@id/shippingAndItemsLinearLayout"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/totalAmountLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@id/priceHidingLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/totalAmountTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/blue"
                            android:layout_marginTop="3dp"
                            />
                        <ImageView
                            android:id="@+id/totalAmountArrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_down_blue"
                            android:layout_toRightOf="@id/totalAmountTxt"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/totalAmountPriceTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-1234"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_dark_grey2"
            android:layout_below="@id/priceDetailCardView"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/cashOnDeliveryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:background="@color/white"
            android:padding="15dp">
            <ImageView
                android:id="@+id/cODImageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cod" />
            <TextView
                android:id="@+id/codTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:layout_toRightOf="@id/cODImageView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/downArrowCODButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_down" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/codButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/codTxt"
                android:visibility="gone"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/codBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Place Order"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_dark_grey2"
            android:layout_below="@id/cashOnDeliveryRL" />
        <RelativeLayout
            android:id="@+id/upiRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:padding="15dp">
            <ImageView
                android:id="@+id/uPIImageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_upi"
                android:padding="7dp"/>
            <TextView
                android:id="@+id/upiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPI/RazorPay"
                android:layout_toRightOf="@id/uPIImageView"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>
            <ImageView
                android:id="@+id/downArrowUPIButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/upiButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/upiTxt"
                android:visibility="gone"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/upiBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Place Order"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_dark_grey2"
            android:layout_below="@id/upiRL" />
    </RelativeLayout>
</RelativeLayout>