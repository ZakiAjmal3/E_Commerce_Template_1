<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookOrderPaymentActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="400dp"
            android:indeterminateTint="@color/md_theme_dark_errorContainer"
            />

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/md_theme_dark_errorContainer"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/md_theme_dark_onSurface"
                app:strokeWidth="0dp" />

            <ImageView
                android:id="@+id/backImgBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:contentDescription="Menu Drawer Icon"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/backImgBtn"
                android:text="Success"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/orderSuccessfullTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER SUCCESSFULLY PLACED"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/topBar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/referenceNoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: 334823498234348238483"
            android:layout_below="@id/orderSuccessfullTxt"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_for_hardbookbg"
            android:layout_below="@id/referenceNoTxt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp">
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/orderIdTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Order ID: 334823498234348238483"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/copyImgBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_copy"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/totalAmountLT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@id/linearLayout1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/totalAmounTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1.3"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/priceTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="14sp"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/statusLT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@id/totalAmountLT"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/statusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1.3"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/paidTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paid"
                    android:textSize="14sp"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/PaymentMethodLT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@id/statusLT"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/paymentMethodTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Method:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1.3"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/methodTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="RazorPay"
                    android:textSize="14sp"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_for_hardbookbg"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp">

            <TextView
                android:id="@+id/shippingToTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping To:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shippingToTxt"
                android:text="Name Text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/shippingToTxtDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTxt"
                android:text="Name Text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_for_hardbookbg"
            android:layout_below="@id/relativeLayout2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp">
            <TextView
                android:id="@+id/itemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookItemsSummaryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemTxt"
                android:layout_margin="20dp"
                tools:listitem="@layout/book_order_summary_items_details_recyclerview_layout"/>
        </RelativeLayout>
        <Button
            android:id="@+id/backToHomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:text="Back to Home"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/md_theme_dark_errorContainer"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>